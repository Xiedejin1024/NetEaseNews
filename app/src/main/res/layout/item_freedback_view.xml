<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_freedback_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/mine_normal"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_freedback_icon"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_freedback_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_headline_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_headline_icon"
            android:layout_weight="1"
            android:text="不需要光的影子"

            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <LinearLayout

            android:id="@+id/ll_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="66"
                android:textColor="@color/tabhost"
                android:textSize="18sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotationY="180"
                android:src="@mipmap/praise" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_freedback_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image_freedback_icon"
        android:text="跟帖跟帖跟帖跟帖跟帖跟帖跟帖跟帖跟帖跟帖跟帖"
        android:textSize="@dimen/sp_14" />


</RelativeLayout>